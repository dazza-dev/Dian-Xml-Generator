{% apply spaceless %}<?xml version="1.0" encoding="UTF-8" standalone="no"?>{% endapply %}
<NominaIndividualDeAjuste xmlns="dian:gov:co:facturaelectronica:NominaIndividualDeAjuste"
                          xmlns:xs="http://www.w3.org/2001/XMLSchema-instance"
                          xmlns:ds="http://www.w3.org/2000/09/xmldsig#"
                          xmlns:ext="urn:oasis:names:specification:ubl:schema:xsd:CommonExtensionComponents-2"
                          xmlns:xades="http://uri.etsi.org/01903/v1.3.2#"
                          xmlns:xades141="http://uri.etsi.org/01903/v1.4.1#"
                          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                          SchemaLocation=""
                          xsi:schemaLocation="dian:gov:co:facturaelectronica:NominaIndividualDeAjuste NominaIndividualDeAjusteElectronicaXSD.xsd">
    {# UBLExtensions #}
    {% include 'Components/ubl-extensions-payroll.xml.twig' %}
    {# Adjustment Note Type #}
    <TipoNota>{{ type.code }}</TipoNota>
    <{{ type.name }}>
    {# Predecessor #}
    {% include 'Components/Payroll/predecessor.xml.twig' %}
    {# Period #}
    {% if type.code == '1' %}
    {% include 'Components/Payroll/period.xml.twig' %}
    {% endif %}
    {# Secuence Number #}
    {% include 'Components/Payroll/secuence-number.xml.twig' %}
    {# Generation Place #}
    {% include 'Components/Payroll/generation-place.xml.twig' %}
    {# Provider #}
    {% include 'Components/Payroll/provider.xml.twig' %}
    {# General Information #}
    {% include 'Components/Payroll/general-information.xml.twig' %}
    {# Employer #}
    {% include 'Components/Payroll/employer.xml.twig' %}
    {% if type.code == '1' %}
    {# Employee #}
    {% include 'Components/Payroll/employee.xml.twig' %}
    {# Payment #}
    {% include 'Components/Payroll/payment.xml.twig' %}
    {# Earnings #}
    {% include 'Components/Payroll/earnings.xml.twig' %}
    {# Deductions #}
    {% include 'Components/Payroll/deductions.xml.twig' %}
    {# Total #}
    {% include 'Components/Payroll/totals.xml.twig' %}
    {% endif %}
    </{{ type.name }}>
</NominaIndividualDeAjuste>
